{# Template général de la page #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %} Admin Page Agence Alpha {% endblock %}

{# Css de la page #}
{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="https://bootswatch.com/4/lumen/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
{% endblock %}


{# Codes HTML et balises Twig #}
{% block body %}
<div class="container">

    <div class"=row">
        <div class="col">
            <a href="/logout" class="btn btn-primary btn-sn" style="margin-top:10px;">Se déconnecter</a>
        </div>
        <div class="col">
            <h1>Admin Page</h1>
        </div>
    </div>


    <i class="fas fa-check"></i>

    <h2>Bienvenue {{app.session.get('nom')}} {{app.session.get('prenom')}}</h2>

    <div class="row">
        <div class="col">
            <h3>Gérer les biens</h3>
            <a href="/bien/add" class="btn btn-primary btn-sn" style="margin-top:10px;">Ajouter un bien</a>
            <a href="/bien/modificationbien" class="btn btn-primary btn-sn" style="margin-top:10px;">Modifier un bien</a>
            <a href="/bien/suppressionbien" class="btn btn-primary btn-sn" style="margin-top:10px;">Supprimer un bien</a>
        </div>
        <div class="col">
            <h3>Gérer les categories</h3>
            <a href="/categorie/add" class="btn btn-primary btn-sn" style="margin-top:10px;">Ajouter une categorie</a>
            <a href="/categorie/modificationcategorie" class="btn btn-primary btn-sn" style="margin-top:10px;">Modifier une categorie</a>
            <a href="/categorie/suppressioncategorie" class="btn btn-primary btn-sn" style="margin-top:10px;">Supprimer une categorie</a>
        </div>
        <div class="col">
        <h3>Acces statistique</h3>
            <a href="/stats" class="btn btn-primary btn-sn" style="margin-top:10px;">Voir les statistiques</a>
        </div>
    </div>

    <hr>
    </hr>

    <div class="row">
        {% include 'shared/_presentation.html.twig' with { 'color': 'white', 'icon': 'fa-solid fa-location-dot', 'text': 'Proximité' } %}
        {% include 'shared/_presentation.html.twig' with { 'color': 'white', 'icon': 'fa-regular fa-lightbulb', 'text': 'Conseil' } %}
        {% include 'shared/_presentation.html.twig' with { 'color': 'white', 'icon': 'fa-solid fa-signs-post', 'text': 'Choix' } %}
    </div>

    <hr>
    </hr>

</div>
{% endblock %}